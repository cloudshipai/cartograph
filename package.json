{
  "name": "cartograph",
  "version": "0.1.0",
  "description": "Visual codebase mapping plugin for OpenCode - auto-generates architecture diagrams as you code",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "dev": "bun --watch src/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^0.1.0",
    "tree-sitter": "^0.21.0",
    "tree-sitter-typescript": "^0.21.0",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-go": "^0.21.0",
    "madge": "^8.0.0",
    "chokidar": "^4.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.4.0"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "opencode",
    "plugin",
    "architecture",
    "visualization",
    "codebase",
    "mapping"
  ],
  "author": "CloudShip AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudshipai/cartograph.git"
  }
}
